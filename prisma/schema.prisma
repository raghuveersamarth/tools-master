generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id       Int    @id @default(autoincrement())
  password String
  role String @default("view")
  username String @unique
}
model Tool{
  id Int @id @unique
  tool_no Int
  name String
  size String
  specification String
  used_for_component String
  imageUrl String 
  minquantity Int
  maxquantity Int
  location String?
}